<h1>Todos</h1>

<form class="add-todo" action='/todos' method='post'>
  <input name="todo[body]" type="text" placeholder="What do you need to do, todo?">
</form>

<ul class="todo-list">
  <% @todos.each do |todo| %>
    <li class="todo <%= 'todo--complete' if todo.complete? %>">
      <label class="label label--checkbox">
        <input type="checkbox"
          class="checkbox <%= 'checkbox--checked' if todo.complete? %>">
        <%= todo.body %>
      </label>
    </li>
  <% end %>
</ul>
